<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>



<h2>Comments</h2>
<%= render partial: "articles/comment" , :collection=> @article.comments, :as=> :comment %>



<h2>Add a comment:</h2>
<%= form_for(:comment, :url=> article_comments_path(@article, @article.comments.build)) do |f| %>
  
  <%= render :partial=>"comments/form", :locals=>{:f=>f}%>

<% end %>

<%= link_to 'Back', articles_path%>
| <%= link_to 'Edit', edit_article_path(@article) %>